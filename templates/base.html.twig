<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}DirectoryIndex{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸ“‚</text></svg>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body class="dark:bg-gray-900">
{% block navbar %}
    {# @var directory \ricwein\FileSystem\Directory #}
    <nav class="bg-white border-gray-200 px-2 h-24 sm:px-4 py-2.5 rounded dark:bg-gray-900 sticky top-0 z-30">
        <div class="container flex flex-wrap items-center justify-between mx-auto">
            <a href="{{ url('app_index', {path: ''}) }}" class="flex items-center">
                <img src="https://picsum.photos/seed/{{ directory.path.filename }}/40/" class="h-6 mr-3 sm:h-9 rounded-full" alt="Directory-Index"/>
                <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">/{{ directory.path.relativePathToSafePath }}</span>
            </a>
            <button data-collapse-toggle="navbar-default" type="button"
                    class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                    aria-controls="navbar-default" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <i class="fa-solid fa-bars fa-lg w-6 h-6"></i>
            </button>
            <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                <ul class="flex flex-col p-4 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
                    <li>
                        <a
                                class="w-full sm:w-auto py-2 px-3 bg-blue-900 hover:bg-blue-700 text-white text-sm font-semibold rounded-md shadow focus:outline-none"
                                type="button"
                                href="#">
                            <i class="fa-solid fa-ellipsis-h"></i>
                        </a>
                    </li>
                    <li>
                        <a
                                class="w-full sm:w-auto py-2 px-3 bg-blue-900 hover:bg-blue-700 text-white text-sm font-semibold rounded-md shadow focus:outline-none cursor-pointer"
                                type="button"
                                href="#">
                            <i class="fa-solid fa-fw fa-file-archive"></i>
                            <i class="fa-solid fa-fw fa-arrow-down"></i>
                        </a>
                    </li>
                    <li>
                        <div class="relative mx-auto text-gray-600 lg:block hidden">
                            <input class="border-2 border-gray-300 dark:border-blue-900 bg-white h-10 pl-2 pr-8 rounded-lg text-sm focus:outline-none dark:bg-gray-900" type="search" name="search" placeholder="Search">
                            <button type="submit" class="absolute right-0 top-0 mt-3 mr-2">
                                <i class="fa-solid fa-search text-gray-600 h-4 w-4 fill-current"></i>
                            </button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}{% endblock %}
</body>
</html>
