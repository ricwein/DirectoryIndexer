<h1 class="title is-5">
    <i class="fa-fw {{ metaData.faIcon() }}"></i>
    &nbsp;
    {{ metaData.filename() }}
</h1>

<div class="content">
    <table class="table is-hoverable is-fullwidth file-info">
        <tbody>

        <tr>
            <td class="data-attribute"><strong>Size</strong></td>
            <td class="data-value">{{ metaData.size() | format_bytes(1) }}</td>
        </tr>

        {% if not(metaData.isDir()) %}
            <tr>
                <td class="data-attribute"><strong>MimeType</strong></td>
                <td class="data-value">{{ metaData.mimeType() ?? '-' }}</td>
            </tr>

            <tr>
                <td colspan="2"></td>
            </tr>

            <tr>
                <td class="data-attribute"><strong>MD5</strong></td>
                <td class="data-value">{{ metaData.hashMD5() }}</td>
            </tr>
            <tr>
                <td class="data-attribute"><strong>SHA1</strong></td>
                <td class="data-value">{{ metaData.hashSHA1() }}</td>
            </tr>
            <tr>
                <td class="data-attribute"><strong>SHA256</strong></td>
                <td class="data-value">{{ metaData.hashSHA256() }}</td>
            </tr>

            <tr>
                <td colspan="2"></td>
            </tr>

            <tr title="{{ metaData.timeCreated() | date('d.m.Y H:i:s') }}">
                <td class="data-attribute"><strong>Created</strong></td>
                <td class="data-value">{{ metaData.timeCreated() | date('d.m.Y H:i') }}</td>
            </tr>
            <tr title="{{ metaData.timeLastModified() | date('d.m.Y H:i:s') }}">
                <td class="data-attribute"><strong>Last Modified</strong></td>
                <td class="data-value">{{ metaData.timeLastModified() | date('d.m.Y H:i') }}</td>
            </tr>
        {% endif %}

        </tbody>
    </table>
</div>
