{% extends 'base.html.twig' %}

{% block body %}
    <div class="sm:px-0 md:px-6 lg:px-12 xl:px-30 mt-12 mb-12">
        <table class="file-table">
            <thead>
            <tr>
                <th scope="col">File</th>
                <th scope="col">Size</th>
                <th scope="col">Last Modified</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% if parentPath is not null %}
                <tr is="vue:parent-row"
                    url="{{ url('app_index', {path: parentPath.relativePath(rootPath)}) }}"
                ></tr>
            {% endif %}
            {% for data in files %}
                <tr is="vue:file-row"
                    :file='{{ data.file | json_encode | raw }}'
                    :size='{{ data.size | json_encode | raw }}'
                    :hashes='{{ data.hashes | json_encode | raw }}'
                    previewSize="40"
                    url="{{ url('app_index', {path: data.file.file.path.relativePath(rootPath)}) }}"
                ></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
